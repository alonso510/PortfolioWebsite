{
  "name": "portfolio-fullstack",
  "version": "1.0.0",
  "engines": {
    "node": "18.x",
    "npm": "10.x"
  },
  "scripts": {
    "start": "node backend/server.js",
    "heroku-postbuild": "cd src && npm install --legacy-peer-deps && npm run build",
    "dev": "concurrently \"nodemon backend/server.js\" \"cd src && npm start\"",
    "build": "cd src && npm run build",
    "test": "cd src && npm test"
  },
  "cacheDirectories": ["src/node_modules"],
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "nodemailer": "^6.9.16",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^2.0.22"
  }
}